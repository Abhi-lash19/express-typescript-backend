<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title || "Backend Admin" %></title>

    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme =
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        document.documentElement.setAttribute(
          "data-theme",
          storedTheme || systemTheme
        );
      })();
    </script>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <style>
      header.container {
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(8px);
        background: var(--pico-background-color);
      }

      main.container {
        margin-top: 2.5rem;
      }

      .muted {
        opacity: 0.65;
      }

      .error-text {
        color: #c62828;
        font-size: 0.85rem;
        margin-top: 0.5rem;
      }

      .success-text {
        color: #2e7d32;
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }

      /* ---------- Modal ---------- */
      .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.65);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 2000;
      }

      .modal {
        background: var(--pico-background-color);
        padding: 2.25rem;
        border-radius: 14px;
        max-width: 420px;
        width: 100%;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.35);
      }

      .modal h3 {
        margin-bottom: 1.5rem;
      }

      .auth-input {
        width: 100%;
        height: 44px;
        padding: 0 0.9rem;
        font-size: 0.95rem;
        border-radius: 10px;
      }

      .auth-field {
        margin-bottom: 1.1rem;
      }

      .password-wrapper {
        position: relative;
      }

      .toggle-password {
        position: absolute;
        right: 0.9rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 0.9rem;
        opacity: 0.6;
        user-select: none;
      }

      .auth-actions {
        margin-top: 1.25rem;
      }

      .danger {
        color: #c62828;
        font-weight: 600;
      }
    </style>
  </head>

  <body>
    <!-- GLOBAL NAVIGATION -->
    <header class="container">
      <nav>
        <ul>
          <li><strong>Backend Admin</strong></li>
        </ul>

        <ul>
          <!-- Dashboard is now the HOME -->
          <li><a href="/admin/dashboard">Home</a></li>
          <li><a href="/admin/playground">API Playground</a></li>
          <li><a href="/admin/docs">Docs</a></li>

          <li>
            <button type="button" onclick="toggleTheme()">üåó</button>
          </li>

          <li>
            <button type="button" onclick="openAuthModal()">
              Login / Get JWT
            </button>
          </li>
        </ul>
      </nav>
    </header>

    <main class="container">
      <%- body %>
    </main>

    <!-- AUTH MODAL -->
    <div class="modal-backdrop" id="auth-modal">
      <div class="modal">
        <h3>Create Account / Login</h3>

        <form id="auth-form" autocomplete="off">
          <div class="auth-field">
            <input
              id="auth-email"
              type="email"
              class="auth-input"
              placeholder="Email"
              required
            />
          </div>

          <div class="auth-field password-wrapper">
            <input
              id="auth-password"
              type="password"
              class="auth-input"
              placeholder="Password"
              required
            />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility()"
              title="Show / Hide password"
              >üëÅ</span
            >
          </div>

          <ul id="password-hints"></ul>

          <div class="auth-actions">
            <button type="submit" style="width: 100%">
              Create Account
            </button>

            <button
              type="button"
              class="danger"
              style="width: 100%; margin-top: 0.75rem"
              onclick="closeAuthModal()"
            >
              Cancel
            </button>
          </div>
        </form>

        <p id="auth-message" class="muted"></p>
      </div>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>
