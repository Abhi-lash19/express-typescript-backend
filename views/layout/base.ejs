<!--views/layout/base.ejs-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title || "Backend Admin" %></title>

    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme =
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        document.documentElement.setAttribute(
          "data-theme",
          storedTheme || systemTheme
        );
      })();
    </script>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <style>
      header.container {
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(8px);
        background: var(--pico-background-color);
      }

      header nav strong {
        font-weight: 600;
        letter-spacing: 0.3px;
      }

      main.container {
        margin-top: 2.5rem;
      }

      footer.app-footer {
        margin-top: 6rem;
        padding: 2.5rem 0;
        display: flex;
        justify-content: center;
        text-align: center;
        opacity: 0.75;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
      }

      footer.app-footer small {
        line-height: 1.7;
        letter-spacing: 0.3px;
      }

      .footer-meta {
        opacity: 0.7;
      }

      .footer-bottom {
        display: inline-flex;
        gap: 0.75rem;
        align-items: center;
        margin-top: 0.25rem;
      }

      .env-badge {
        padding: 0.15rem 0.55rem;
        border-radius: 999px;
        font-size: 0.65rem;
        font-weight: 600;
        letter-spacing: 0.4px;
        text-transform: uppercase;
      }

      .env-production {
        background: #0f5132;
        color: #d1e7dd;
      }

      .env-development {
        background: #084298;
        color: #cfe2ff;
      }

      article {
        border-radius: 12px;
      }

      .metric {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .muted {
        opacity: 0.6;
      }

      .endpoint-list li {
        margin-bottom: 0.5rem;
      }

      pre {
        max-height: 420px;
        overflow: auto;
      }
    </style>
  </head>

  <body>
    <%- include("../partials/nav") %>

    <main class="container">
      <%- body %>
    </main>

    <%- include("../partials/footer") %>

    <script src="/js/app.js"></script>
  </body>
</html>
