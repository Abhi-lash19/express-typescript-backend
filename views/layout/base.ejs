<!--views/layout/base.ejs-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title || "Backend Admin" %></title>
    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme =
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";

        const theme = storedTheme || systemTheme;
        document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>

    <!-- Pico.css -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <style>
      header nav strong {
        font-weight: 600;
        letter-spacing: 0.3px;
      }

      main.container {
        margin-top: 2.5rem;
      }

      footer {
        margin-top: 4rem;
        opacity: 0.6;
      }

      hgroup > p {
        max-width: 60ch;
      }

      article {
        border-radius: 12px;
      }

      .metric {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .muted {
        opacity: 0.6;
      }
    </style>
  </head>

  <body>
    <%- include("../partials/nav") %>

    <main class="container">
      <%- body %>
    </main>

    <%- include("../partials/footer") %>

    <!-- Global App JS -->
    <script src="/js/app.js"></script>
  </body>
</html>
