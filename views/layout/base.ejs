<!--views/layout/base.ejs-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title || "Backend Admin" %></title>

    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme =
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        document.documentElement.setAttribute(
          "data-theme",
          storedTheme || systemTheme
        );
      })();
    </script>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <style>
      header.container {
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(8px);
        background: var(--pico-background-color);
      }

      header nav strong {
        font-weight: 600;
        letter-spacing: 0.3px;
      }

      main.container {
        margin-top: 2.5rem;
      }

      footer {
        margin-top: 4rem;
        opacity: 0.6;
      }

      article {
        border-radius: 12px;
      }

      .metric {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .muted {
        opacity: 0.6;
      }

      .endpoint-list li {
        margin-bottom: 0.5rem;
      }

      pre {
        max-height: 420px;
        overflow: auto;
      }
    </style>
  </head>

  <body>
    <%- include("../partials/nav") %>

    <main class="container">
      <%- body %>
    </main>

    <%- include("../partials/footer") %>

    <script src="/js/app.js"></script>
  </body>
</html>
