<!--views/layout/base.ejs-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title || "Backend Admin" %></title>

    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme =
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        document.documentElement.setAttribute(
          "data-theme",
          storedTheme || systemTheme
        );
      })();
    </script>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <style>
      header.container {
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(8px);
        background: var(--pico-background-color);
      }

      main.container {
        margin-top: 2.5rem;
      }

      .muted {
        opacity: 0.65;
      }

      .error-text {
        color: #c62828;
        font-size: 0.85rem;
        margin-top: 0.25rem;
      }

      .success-text {
        color: #2e7d32;
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }

      .password-hints li {
        color: #c62828;
        font-size: 0.8rem;
      }

      .password-wrapper {
        position: relative;
      }

      .toggle-password {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 0.9rem;
        opacity: 0.6;
      }

      /* ---------- Modal ---------- */
      .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 2000;
      }

      .modal {
        background: var(--pico-background-color);
        padding: 2rem;
        border-radius: 12px;
        max-width: 520px;
        width: 100%;
      }
    </style>
  </head>

  <body>
    <header class="container">
      <nav>
        <ul>
          <li><strong>Backend Admin</strong></li>
        </ul>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/admin/dashboard">Admin</a></li>
          <li><a href="/admin/playground">API Playground</a></li>
          <li><a href="/admin/docs">Docs</a></li>
          <li>
            <button onclick="toggleTheme()" title="Toggle theme">üåó</button>
          </li>
          <li>
            <button onclick="openAuthModal()">Login / Get JWT</button>
          </li>
        </ul>
      </nav>
    </header>

    <main class="container">
      <%- body %>
    </main>

    <footer class="app-footer">
      <small class="muted">Express + TypeScript Backend Demo</small>
    </footer>

    <!-- =====================
         Auth Modal
         ===================== -->
    <div class="modal-backdrop" id="auth-modal">
      <div class="modal">
        <h3>Create Account / Login</h3>

        <p class="muted">
          Demo authentication used to generate a user-scoped JWT for testing
          write APIs.
        </p>

        <ul class="muted">
          <li>Email can be any valid-looking address</li>
          <li>Password must be strong</li>
          <li>Please remember credentials ‚Äî used to generate JWTs</li>
        </ul>

        <form id="auth-form">
          <label>
            Email
            <input type="email" id="auth-email" required />
          </label>

          <label>
            Password
            <div class="password-wrapper">
              <input type="password" id="auth-password" required />
              <span
                class="toggle-password"
                onclick="togglePasswordVisibility()"
                >üëÅ</span
              >
            </div>
          </label>

          <ul class="password-hints" id="password-hints"></ul>

          <button type="submit">Create Account</button>
          <button type="button" class="secondary" onclick="closeAuthModal()">
            Cancel
          </button>
        </form>

        <p id="auth-message" class="muted"></p>
      </div>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>
